# Build stage
FROM golang:1.24-alpine3.21 AS builder

# Install build dependencies
RUN apk add --no-cache git

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the MCP server application
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o bin/mcp ./cmd/mcp/

# Final stage
FROM alpine:3.21

# Install ca-certificates for HTTPS calls to journal API
RUN apk --no-cache add ca-certificates-bundle

# Create non-root user
RUN addgroup -g 1000 -S appgroup && \
    adduser -u 1000 -S appuser -G appgroup

# Set working directory
WORKDIR /app

# Copy binary from builder stage
COPY --from=builder /app/bin/mcp .

# Change ownership to non-root user
RUN chown appuser:appgroup /app/mcp

# Switch to non-root user
USER appuser

# No exposed ports - MCP uses stdio communication
# No health check - stdio-based service

# Run the application
CMD ["./mcp"]